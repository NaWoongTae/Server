@page "/user"
@using BlazorApp.Data;

<h3>Online Users</h3>

<p>
    Users : <b>@_users.Count()</b>
</p>

<br />

<div class="container">
    <div class="row">
        <div class="col">
            <input class="form-control" placeholder="Add User" @bind-value="_inputName" />
        </div>
        <div class="col">
            <button class="@_btnClass" type="button" @onclick="AddUser" disabled="@(_users.Count >= 10)">Add a User</button>
        </div>
    </div>
</div>

<br />

<ul class="list-group">
    @if (_users.Count > 0)
    {
        @foreach (UserData ud in _users)
        {
            <li @key="ud" class="list-group-item">
                <button type="button" class="btn btn-link" @onclick="(() => RemoveUser(ud))">[Off]</button>
                @ud.Name
            </li>
        }
    }
    else
    {
        <div>
            <b>No Mans Sky</b>
        </div>
    }
</ul>

@code {
    List<UserData> _users = new List<UserData>();

    string _inputName;
    string _btnClass = "btn btn-primary";

    protected override void OnInitialized()
    {
        _users.Add(new UserData() { Name = "Jack" });
        _users.Add(new UserData() { Name = "Lee" });
        _users.Add(new UserData() { Name = "Tanaka" });
        _users.Add(new UserData() { Name = "Monica" });
        _users.Add(new UserData() { Name = "Ben" });
        RefreshButton();
    }

    void AddUser()
    {
        _users.Add(new UserData() { Name = _inputName });
        _inputName = "";
        RefreshButton();
    }

    void RemoveUser(UserData user)
    {
        _users.Remove(user);
        RefreshButton();
    }

    void RefreshButton()
    {
        if (_users.Count() % 2 == 0)
            _btnClass = "btn btn-primary";
        else
            _btnClass = "btn btn-secondary";
    }
}
